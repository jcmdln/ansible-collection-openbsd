root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
tab_width = 4
trim_trailing_whitespace = true

[*.{json{,c},yml}{,.j2}]
indent_size = 2
tab_width = 2

[*.{yaml,ansible-}lint]
indent_size = 2
tab_width = 2

[Vagrantfile]
indent_size = 2
tab_width = 2
