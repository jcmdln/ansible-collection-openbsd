{
  "editor.defaultFormatter": "prettier.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",

  "files.associations": {
    ".ansible-lint": "yaml",
    "**/.github/workflows/galaxy.yaml": "yaml",
    "**/defaults/**/*.yaml": "ansible",
    "**/handlers/**/*.yaml": "ansible",
    "**/inventory/**/*.yaml": "ansible",
    "**/meta/**/*.yaml": "ansible",
    "**/tasks/**/*.yaml": "ansible",
    "**/vars/**/*.yaml": "ansible",
    "**/roles/*/templates/**/*.conf.j2": "jinja-properties",
    "galaxy.yml": "ansible",
    "site-*.yaml": "ansible"
  },
  "files.exclude": {
    "**/__pycache__/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.tox/**": true,
    "**/.venv/**": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  //
  // Extensions
  //

  "ansible.python.interpreterPath": "/bin/python",
  "ansible.lightspeed.enabled": false,

  "evenBetterToml.formatter.columnWidth": 100,
  "evenBetterToml.formatter.reorderKeys": true,
  "evenBetterToml.schema.enabled": false,

  "python.testing.pytestArgs": ["test"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,

  "ruff.enable": true,
  "ruff.organizeImports": true,

  "yaml.schemas": {
    "https://raw.githubusercontent.com/ansible/schemas/main/f/ansible.json": [
      "{workspaceFolder}/site-*.yml"
    ],
    "https://raw.githubusercontent.com/ansible-community/schemas/main/f/ansible-galaxy.json": [
      "{workspaceFolder}/galaxy.yml"
    ],
    "https://json.schemastore.org/github-workflow.json": [
      "{workspaceFolder}/.github/workflows/*.yml"
    ]
  },

  //
  // Languages
  //

  "[json]": { "editor.defaultFormatter": "prettier.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "prettier.prettier-vscode" },
  "[markdown]": { "editor.defaultFormatter": "prettier.prettier-vscode" },

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  "[yaml]": { "editor.defaultFormatter": "prettier.prettier-vscode" }
}
